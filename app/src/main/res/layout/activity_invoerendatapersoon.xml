<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Invoerendatapersoon">

    <ImageView
        android:id="@+id/ivProfielFoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOpslaan10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/knopopslaan"
        app:layout_constraintEnd_toEndOf="@+id/RensGridInfoAnderen"
        app:layout_constraintStart_toStartOf="@+id/RensGridInfoAnderen"
        app:layout_constraintTop_toBottomOf="@+id/RensGridInfoAnderen" />

    <TextView
        android:id="@+id/tvImageurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/RensGridInfoAnderen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfielFoto">

        <TextView
            android:id="@+id/textViewWoonplaats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/woonplaats"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewNaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/naam"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextSport"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:ems="10"
            android:hint="@string/hintsport"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextTv"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="1"
            android:ems="10"
            android:hint="@string/hinttvprogramma"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/editTextEmail"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:ems="10"
            android:text="@string/hintemailadres"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextWoonplaats"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:ems="10"
            android:hint="@string/hintwoonplaats"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextHuisdier"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:ems="10"
            android:hint="@string/hinthuisdier"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextGeboortedatum"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:ems="10"
            android:hint="@string/hintgeboortedatum"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextWebsite"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="1"
            android:ems="10"
            android:hint="@string/hintwebsite"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/editTextNaam"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:text="@string/hintnaam"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewGeboortedatum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/geboortedatum"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/emailadres"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="@string/sport"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewHuisdier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="@string/huisdier"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:text="@string/tvprogramma"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:text="@string/website"
            android:textSize="18sp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>