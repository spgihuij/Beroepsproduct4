<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/titel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_header"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="Informatie over anderen"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/titel"
        app:layout_constraintStart_toStartOf="@+id/titel"
        app:layout_constraintTop_toBottomOf="@+id/titel"
        app:srcCompat="@android:color/background_dark" />

    <GridLayout
        android:id="@+id/RensGridInfoAnderen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/ev_naam"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Naam:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvNaam"
            android:layout_width="198dp"
            android:layout_height="34dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Naam"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ev_Datum"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Geboortedatum:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvDatum"
            android:layout_width="193dp"
            android:layout_height="34dp"
            android:text="Geboortedatum:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ev_Locatie"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Woonplaats:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvLocatie"
            android:layout_width="195dp"
            android:layout_height="34dp"
            android:text="Woonplaats"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_sport"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Sport:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_sport"
            android:layout_width="195dp"
            android:layout_height="35dp"
            android:text="Sport"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_huisdier"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Favoriete Huisdier:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_huisdier"
            android:layout_width="197dp"
            android:layout_height="36dp"
            android:text="Favoriete Huisdier"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_tvp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Favorite TV Programma:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_tvprogramma"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="Favorite TV Programma"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_website"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Favorite Website:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_website"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="Favorite Website"
            android:textSize="18dp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>