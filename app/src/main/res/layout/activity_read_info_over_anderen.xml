<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/titel"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="Informatie over anderen"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/RensGridInfoAnderen"
        android:layout_width="371dp"
        android:layout_height="286dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titel">

        <TextView
            android:id="@+id/ia_naam"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="Naam:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_naam"
            android:layout_width="198dp"
            android:layout_height="34dp"
            android:text="Naam"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_Geboortedatum"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Geboortedatum:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_Geboortedatum"
            android:layout_width="193dp"
            android:layout_height="34dp"
            android:text="Geboortedatum:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_woonp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Woonplaats:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_woonp"
            android:layout_width="195dp"
            android:layout_height="34dp"
            android:text="Woonplaats"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_sport"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Sport:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_sport"
            android:layout_width="195dp"
            android:layout_height="35dp"
            android:text="Sport"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_huisdier"
            android:layout_width="162dp"
            android:layout_height="37dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Favoriete Huisdier:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_huisdier"
            android:layout_width="197dp"
            android:layout_height="36dp"
            android:text="Favoriete Huisdier"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_tvp"
            android:layout_width="168dp"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Favorite TV Programma:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_tvprogramma"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="Favorite TV Programma"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_website"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Favorite Website:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/ia_iv_website"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="Favorite Website"
            android:textSize="18dp" />

    </GridLayout>

    <Button
        android:id="@+id/buttonInfoOveranderen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RensGridInfoAnderen" />

</android.support.constraint.ConstraintLayout>